{
    "version": "2.0.0",
    "console": "internalConsole",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:/ProgramData/chocolatey/bin/gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lopengl32",
                "-lglu32",
                "-lglut32"
            ],
            "options": {
                "cwd": "C:/ProgramData/chocolatey/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}